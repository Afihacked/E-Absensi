<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.afitech.absensi.ui.auth.SplashFragment"
        android:label="Splash">

        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.afitech.absensi.ui.auth.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>


    </fragment>


    <fragment
        android:id="@+id/registerFragment"
        android:name="com.afitech.absensi.ui.auth.RegisterFragment"
        android:label="Register" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.afitech.absensi.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_verifyPhotoFragment"
            app:destination="@id/verifyPhotoFragment"/>
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.afitech.absensi.ui.home.HistoryFragment"
        android:label="History" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.afitech.absensi.ui.profile.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.afitech.absensi.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"/>

    <fragment
        android:id="@+id/settingsWatermarkFragment"
        android:name="com.afitech.absensi.ui.settings.SettingsWatermarkFragment"
        android:label="Custom Watermark"
        tools:layout="@layout/fragment_settings_watermark" />
    <fragment
        android:id="@+id/verifyPhotoFragment"
        android:name="com.afitech.absensi.ui.verify.VerifyPhotoFragment"
        android:label="Verifikasi Foto">

        <argument
            android:name="imageUri"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/avatarPreviewFragment"
        android:name="com.afitech.absensi.ui.profile.AvatarPreviewFragment"
        android:label="Avatar Preview"/>

</navigation>
