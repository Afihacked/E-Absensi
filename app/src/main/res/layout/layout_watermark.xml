<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- BAR ATAS (PUTIH) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bar"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:padding="4dp">

        <!-- NAMA (KUNING) -->
        <TextView
            android:id="@+id/tvWmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:background="@drawable/bg_name"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="32sp"/>

        <!-- WAKTU -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/tvWmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:28"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_bold"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

    </LinearLayout>

    <!-- ISI BAWAH + GARIS KUNING -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <!-- GARIS KUNING -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_yellow_line"/>

        <!-- TEKS -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tvWmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:text="25 Jan 2026"
                android:textColor="#FFFFFF"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tvWmAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_reguler"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="Alamat lengkap lokasi absensi"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:lineSpacingExtra="2dp"
                android:breakStrategy="high_quality"
                android:hyphenationFrequency="normal"
                android:ellipsize="none" />

            <TextView
                android:id="@+id/tvWmLatLng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-7.xxx, 109.xxx"
                android:fontFamily="@font/poppins_reguler"
                android:textColor="#FFFFFF"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:textSize="25sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
